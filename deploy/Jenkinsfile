pipeline {
    agent any
    stages {
        stage('Prepare Ansible Environment') {
            steps {
                echo "Setting up Ansible environment for Artifactory installation..."
                sh 'ansible-galaxy collection install jfrog.platform'
            }
        }
        stage('Install Artifactory') {
            steps {
                script {
                    try {
                        echo "Running Ansible playbook to install Artifactory..."
                        sh 'ansible-playbook -i inventory/artifactory.yml playbooks/site.yml'
                    } catch (Exception e) {
                        echo "An error occurred during the playbook execution: ${e.message}"
                        currentBuild.result = 'FAILURE'
                        error("Installation failed, please check the logs for more details.")
                    }
                }
            }
        }
    }
    post {
        always {
            echo "Pipeline completed. Check for success or failure logs."
        }
        success {
            echo "JFrog Artifactory installation completed successfully."
        }
        failure {
            echo "Installation failed. See logs in Blue Ocean for details."
        }
    }
}
