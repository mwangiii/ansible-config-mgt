pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/mwangiii/ansible-config-mgt.git'
            }
        }

        stage('Install Artifactory on gcp-artifactory') {
            steps {
                sshagent(['private-key']) {
                    sh '''
                    ansible-playbook -i inventory/ci.yml playbooks/site.yml
                    '''
                }
            }
        }
    }
}
