pipeline {
    agent any
    environment {
        ARTIFACTORY_SERVER = 'njekev65@34.71.158.12'  // Replace with your actual Artifactory server
    }
    stages {
        stage('Install Dependencies on Artifactory Server') {
            steps {
                script {
                    // Install necessary dependencies (Java, PostgreSQL, etc.) on the Artifactory server
                    sshagent(['private-key']) {
                        sh '''
                        # Update the system and install necessary dependencies
                        ssh ${ARTIFACTORY_SERVER} "sudo apt-get update -y && sudo apt-get upgrade -y"
                        ssh ${ARTIFACTORY_SERVER} "sudo apt-get install -y openjdk-11-jdk wget curl gnupg lsb-release ca-certificates postgresql postgresql-contrib"
                        '''
                    }
                }
            }
        }

        stage('Remove Old Artifactory Repository') {
            steps {
                script {
                    // Remove the old Bintray repository that is causing the 404 error
                    sshagent(['private-key']) {
                        sh '''
                        # Remove any old Bintray repository entries
                        ssh ${ARTIFACTORY_SERVER} "sudo rm -f /etc/apt/sources.list.d/jfrog-artifactory.list"
                        ssh ${ARTIFACTORY_SERVER} "sudo rm -f /etc/apt/sources.list.d/jfrog-bintray.list"
                        '''
                    }
                }
            }
        }

        stage('Add New JFrog Artifactory Repository') {
            steps {
                script {
                    // Add the new JFrog Artifactory repository
                    sshagent(['private-key']) {
                        sh '''
                        # Add the JFrog public key
                        ssh ${ARTIFACTORY_SERVER} "curl -fsSL https://releases.jfrog.io/artifactory/api/gpg/key/public | sudo apt-key add -"
                        
                        # Add the Artifactory repository to the system
                        ssh ${ARTIFACTORY_SERVER} "echo 'deb https://releases.jfrog.io/artifactory/artifactory-debs focal main' | sudo tee /etc/apt/sources.list.d/jfrog-artifactory.list"
                        
                        # Update the package list to include the new repository
                        ssh ${ARTIFACTORY_SERVER} "sudo apt-get update"
                        '''
                    }
                }
            }
        }

        stage('Install Artifactory') {
            steps {
                script {
                    // Install Artifactory from the updated repository
                    sshagent(['private-key']) {
                        sh '''
                        ssh ${ARTIFACTORY_SERVER} "sudo apt-get install -y jfrog-artifactory-oss"
                        '''
                    }
                }
            }
        }
    }
}
